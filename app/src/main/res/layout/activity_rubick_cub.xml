<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rubick_cub">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="506dp"
        android:layout_height="976dp"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="-70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bc_1" />

    <ImageButton
        android:id="@+id/button_back2"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_launcher_background"
        android:onClick="quit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back" />

    <Button
        android:id="@+id/inf_cubRub"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:onClick="startNewActivityRubInfo"
        android:text="Что такое Кубик Рубика?"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:onClick="startNewActivityRubHelp"
        android:text="Помощь в сборке"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inf_cubRub" />


</androidx.constraintlayout.widget.ConstraintLayout>